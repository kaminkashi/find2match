</head>

<body>
    <div class="container">
        <p id="errorMessage" class="error-message" style="display: none;"></p>

        <h2>Search</h2>
        <form id="searchForm">
            <label for="searchDeceased">find DECEASED by entering date:</label>
            <input type="text" id="searchDeceased" name="searchDeceased" placeholder="YYYY-MM-DD" />
              <!-- Add a dropdown for gender selection -->
              <label for="searchYear">filter:</label>
              <select id="searchYear" name="searchYesr">
                  <option value="year">YYYY-MM-DD</option>
                  <option value="day">DD</option>
                  <option value="month">MM</option>
                  <option value="all">YYYY</option>
              </select>
            <button type="submit">Search</button>
        </form>

        <!-- Display search results here -->
        <div id="resultsContainer">
            <ul id="matchingUsersList">
                <!-- Each matching user will be appended here dynamically -->
            </ul>
        </div>

        <!-- Add a link to go back to the home page -->
        <a href="/search" class="go-back-link">Go back</a>
    </div>

    <script src="/JsSearch_d.js"></script>
</body>

